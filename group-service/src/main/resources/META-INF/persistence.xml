<?xml version="1.0" encoding="UTF-8"?>
<persistence
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
        xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="GroupPU"> <!-- PU for persistence unit transaction-type="JTA" -->
        <!-- https://youtu.be/FeZ5BC0PirQ, https://gist.github.com/SergioDiniz/886723272d9fd95dd17ecb79b35b66e1 -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>domain.model.Group</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://group-service-database:5432/GroupPU" />
            <property name="javax.persistence.jdbc.user" value="group-service" />
            <property name="javax.persistence.jdbc.password" value="group-service" />

            <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect" />
        </properties>
</persistence>